[
    {
        "selector": "node",
        "style": {
            "font-size": 12,
            "text-valign": "center",
            "text-halign": "center",
            "text-opacity": 0.7,
            "text-wrap": "ellipsis",
            "text-max-width": 150
        }
    },
    {
        "selector": "edge",
        "style": {
            "line-color": "#Dcdcdc",
            "line-style": "dashed"
        }
    },
    {
        "selector": ".neighbors",
        "style": {
            "text-opacity": 1.0,
            "text-background-opacity": 0.8,
            "text-background-color": "#FfFfFf",
            "text-background-padding": "3px",
            "text-border-opacity": 1.0,
            "text-border-style": "solid",
            "text-border-color": "#000000",
            "text-border-width": "1px",
            "line-color": "#696969",
            "line-style": "dashed",
            "font-size": 14,
            "text-wrap": "none"
        }
    },
    {
        "selector": ".tippy-neighbors",
        "style": {
            "text-opacity": 1.0,
            "text-background-opacity": 0.8,
            "text-background-color": "#FfFfFf",
            "text-background-padding": "3px",
            "text-border-opacity": 1.0,
            "text-border-style": "solid",
            "text-border-color": "#000000",
            "text-border-width": "1px",
            "line-color": "#696969",
            "line-style": "solid",
            "font-size": 14,
            "text-wrap": "none"
        }
    },
    {
        "selector": ".foreground",
        "style": {
            "z-index": 2
        }
    },
    {
        "selector": "node[ntype = 'interviewee']",
        "style": {
            "label": "data(name)",
            "background-color": "#9ac0cd",
            "shape": "ellipse"
        }
    },
    {
        "selector": "node[ntype = 'award']",
        "style": {
            "label": "data(name)",
            "background-color": "#Ffa500",
            "shape": "diamond"
        }
    }
]
